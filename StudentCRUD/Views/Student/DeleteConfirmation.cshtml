@model StudentCRUD.Models.Student
@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<form method="post">
    <input type="hidden" name="StudentID" value="@Model.StudentID" /> @* Hidden ID *@

    <label for="StudentName">Student Name:</label>
    <input type="text" name="StudentName" value="@Model.StudentName" />
    <br />

    <label for="StudentAddress">Student Address:</label>
    <input type="text" name="StudentAddress" value="@Model.StudentAddress" />
    <br />
    <div class="d-flex align-items-center">  </div>
    <span class="text-danger ms-2">Are you Sure you want to delete?</span>
    <button id="btnDelete" type="submit" class="btn btn-primary ms-2">Save</button>
    </div >
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#btnDelete").click(function () {
                e.preventDefault(); // Prevent default form submission
        var studentId = $("input[name='StudentID']").val(); // Get the StudentID from hidden input
        window.location.href = `/Student/DeleteStudent/${studentId}`;
            })
        });
    </script>
}